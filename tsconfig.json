{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "maxNodeModuleJsDepth": 8,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
